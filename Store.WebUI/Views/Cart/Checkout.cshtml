@model Store.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Оформление заказа";
}

<h2>Оформление заказа</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h3>Контактные данные</h3>
    <div class="form-group">
        <label>Имя и фамилия</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Город</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Номер склада "Новой почты"</label>
        @Html.TextBoxFor(x => x.Post, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Номер телефона</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    </div>

    <h3>Дополнительные услуги</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.Gift)
            На подарок
        </label>
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Оформить заказ" />
    </div>

}